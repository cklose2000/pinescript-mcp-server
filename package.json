{
  "name": "pinescriptproject1",
  "version": "1.0.0",
  "description": "TradingView PineScript MCP Server for Cursor",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "pinescript-mcp": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start-server": "node --experimental-specifier-resolution=node --loader ts-node/esm src/index.ts",
    "cli": "node --loader ts-node/esm src/cli/index.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.11",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "express": "^5.0.1",
    "fastmcp": "^1.20.5",
    "openai": "^4.89.0",
    "zod": "^3.22.4"
  }
}
